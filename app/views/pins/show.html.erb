<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<div class="well">
			<%= image_tag @pin.image, size:"300x400"%>
			<p class="des">
			  <%= @pin.description %>
			</p>
			<p>
			  <%= @pin.user.name %>
			</p>
			<p>
			<% if current_user == @pin.user %>
				<%= link_to 'Edit', edit_pin_path(@pin) %> |
			<% end %>
			<%= link_to 'Back', pins_path %>
			</p>
		</div>
	</div>
</div>


